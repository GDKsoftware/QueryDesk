<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:System="clr-namespace:System;assembly=mscorlib" x:Class="QueryDesk.MainWindow"
        Title="QueryTool" Height="481" Width="602" Visibility="Visible">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Menu VerticalAlignment="Top" Background="White" Visibility="Collapsed">
            <MenuItem Header="File">
                <MenuItem Header="Load" HorizontalAlignment="Left" Width="140"/>
                <Separator HorizontalAlignment="Left" Height="1" Width="140"/>
                <MenuItem Header="Exit" HorizontalAlignment="Left" Width="140"/>
            </MenuItem>
        </Menu>
        <TabControl x:Name="pgTabs">
            <TabItem x:Name="tabConnections" Header="Connections">
                <Grid Background="White" Margin="0,-1,0,1">
                    <ListBox x:Name="lstConnections" HorizontalAlignment="Left" Margin="7,10,0,10" Width="253" RenderTransformOrigin="0,0" MouseDoubleClick="lstConnections_MouseDoubleClick"/>
                    <GroupBox Header="Settings" HorizontalAlignment="Left" Margin="265,41,0,0" VerticalAlignment="Top" Height="173" Width="307" UseLayoutRounding="True">
                        <Grid Margin="0">
                            <Label Content="Server" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.349,0.769"/>
                            <TextBox x:Name="edServer" HorizontalAlignment="Left" Height="23" Margin="144,10,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="141"/>
                            <Label Content="Username" HorizontalAlignment="Left" Margin="10,36,0,0" VerticalAlignment="Top"/>
                            <TextBox x:Name="edUsername" HorizontalAlignment="Left" Height="23" Margin="144,36,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="141"/>
                            <Label Content="Password" HorizontalAlignment="Left" Margin="10,62,0,0" VerticalAlignment="Top"/>
                            <TextBox x:Name="edPassword" HorizontalAlignment="Left" Height="23" Margin="144,62,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="141"/>
                            <Label Content="Database" HorizontalAlignment="Left" Margin="10,88,0,0" VerticalAlignment="Top"/>
                            <TextBox x:Name="edDatabase" HorizontalAlignment="Left" Height="23" Margin="144,88,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="141"/>
                            <Button Content="Save" HorizontalAlignment="Left" Margin="210,121,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click_1"/>
                        </Grid>
                    </GroupBox>
                    <Button Content="Add" HorizontalAlignment="Left" Margin="265,10,0,0" VerticalAlignment="Top" Width="53" Click="Button_Click"/>
                    <Button Content="Edit" HorizontalAlignment="Left" Margin="323,10,0,0" VerticalAlignment="Top" Width="53"/>
                    <Button Content="Delete" HorizontalAlignment="Left" Margin="381,10,0,0" VerticalAlignment="Top" Width="53"/>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
