<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="QueryDesk.MainWindow"
        Title="QueryDesk" Height="481" Width="602" Visibility="Visible" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Menu VerticalAlignment="Top" Background="White" Visibility="Collapsed">
            <MenuItem Header="File">
                <MenuItem Header="Load" HorizontalAlignment="Left" Width="140"/>
                <Separator HorizontalAlignment="Left" Height="1" Width="140"/>
                <MenuItem Header="Exit" HorizontalAlignment="Left" Width="140"/>
            </MenuItem>
        </Menu>
        <TabControl x:Name="pgTabs">
            <TabItem x:Name="tabConnections" Header="Connections">
                <Grid Background="White" Margin="0,-1,0,1">
                    <ListBox x:Name="lstConnections" HorizontalAlignment="Left" Margin="7,10,0,10" Width="253" RenderTransformOrigin="0,0" MouseDoubleClick="lstConnections_MouseDoubleClick" SelectionChanged="lstConnections_SelectionChanged"/>
                    <GroupBox x:Name="pnlEditServerInfo" Header="Settings" HorizontalAlignment="Left" Margin="265,35,0,0" VerticalAlignment="Top" Height="285" Width="313" UseLayoutRounding="True">
                        <Grid Margin="0">
                            <Label Content="Type" HorizontalAlignment="Left" Margin="13,15,0,0" VerticalAlignment="Top"/>
                            <ComboBox x:Name="cbType" HorizontalAlignment="Left" Margin="147,15,0,0" VerticalAlignment="Top" Width="141" SelectedValue="{Binding type}"/>
                            <Label Content="Name" HorizontalAlignment="Left" Margin="13,42,0,0" VerticalAlignment="Top"/>
                            <TextBox x:Name="edName" HorizontalAlignment="Left" Height="23" Margin="147,42,0,0" Text="{Binding Path=name}" VerticalAlignment="Top" Width="141" TabIndex="0" />
                            <Label Content="Server" HorizontalAlignment="Left" Margin="13,71,0,0" VerticalAlignment="Top"/>
                            <TextBox x:Name="edServer" HorizontalAlignment="Left" Height="23" Margin="147,71,0,0" Text="{Binding Path=host}" VerticalAlignment="Top" Width="141" TabIndex="1"/>
                            <Label Content="Port" HorizontalAlignment="Left" Margin="13,100,0,0" VerticalAlignment="Top"/>
                            <TextBox x:Name="edPort" HorizontalAlignment="Left" Height="23" Margin="147,100,0,0" Text="{Binding Path=port}" VerticalAlignment="Top" Width="141" TabIndex="1"/>
                            <Label Content="Username" HorizontalAlignment="Left" Margin="13,129,0,0" VerticalAlignment="Top"/>
                            <TextBox x:Name="edUsername" HorizontalAlignment="Left" Height="23" Margin="147,129,0,0" Text="{Binding Path=username}" VerticalAlignment="Top" Width="141" TabIndex="2"/>
                            <Label Content="Password" HorizontalAlignment="Left" Margin="13,157,0,0" VerticalAlignment="Top"/>
                            <PasswordBox x:Name="edPassword" HorizontalAlignment="Left" Margin="147,157,0,0" Password="" VerticalAlignment="Top" Height="24" Width="141" TabIndex="3"/>
                            <Label Content="Database" HorizontalAlignment="Left" Margin="13,186,0,0" VerticalAlignment="Top"/>
                            <TextBox x:Name="edDatabase" HorizontalAlignment="Left" Height="23" Margin="147,186,0,0" Text="{Binding Path=databasename}" VerticalAlignment="Top" Width="141" TabIndex="4"/>
                            <Button x:Name="btnSaveServerSettings" Content="Save" HorizontalAlignment="Left" Margin="198,231,0,-23" VerticalAlignment="Top" Width="90" Click="btnSaveServerSettings_Click" />
                        </Grid>
                    </GroupBox>
                    <Button x:Name="btnNewServer" Content="Add" HorizontalAlignment="Left" Margin="265,10,0,0" VerticalAlignment="Top" Width="53" Click="btnNewServer_Click" ToolTip="Add new connection"/>
                    <Button x:Name="btnDeleteServer" Content="Delete" HorizontalAlignment="Left" Margin="323,10,0,0" VerticalAlignment="Top" Width="53" Click="btnDeleteServer_Click" ToolTip="Delete connection"/>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
