<Window x:Class="QueryDesk.QuickQuestionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="QuickQuestionWindow" Height="220" Width="503" HorizontalAlignment="Left" FocusManager.FocusedElement="{Binding ElementName=edAnswer}">
    <Grid>
        <Label x:Name="lblQuestion" HorizontalAlignment="Left" Margin="52,23,0,0" VerticalAlignment="Top" Content="??" UseLayoutRounding="False"/>
        <TextBox x:Name="edAnswer" Height="23" Margin="52,69,46,0" TextWrapping="Wrap" VerticalAlignment="Top" UseLayoutRounding="False" TabIndex="0"/>
        <Button x:Name="btnOk" Content="OK" HorizontalAlignment="Right" Margin="0,0,46,19" VerticalAlignment="Bottom" Width="75" HorizontalContentAlignment="Center" Click="btnOk_Click"/>

    </Grid>
</Window>
