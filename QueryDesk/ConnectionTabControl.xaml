<UserControl x:Class="QueryDesk.ConnectionTabControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" Width="604" Height="289">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Label Content="Query" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0" />
        <ComboBox x:Name="cmbQueries" HorizontalAlignment="Left" VerticalAlignment="Top" Width="300" Margin="92,14,0,0" SelectionChanged="cmbQueries_SelectionChanged"/>
        <Button x:Name="btnGoQuery" Content="Go" HorizontalAlignment="Right" Margin="0,16,90,0" VerticalAlignment="Top" Width="75" Click="btnGoQuery_Click"/>
        <TextBox x:Name="edSQL" HorizontalAlignment="Stretch" Height="23" Margin="10,53,10,0" TextWrapping="Wrap" Text="..." VerticalAlignment="Top"/>
        <DataGrid x:Name="gridQueryResults" HorizontalAlignment="Stretch" Margin="10,81,10,10" VerticalAlignment="Stretch" CanUserResizeRows="False" IsReadOnly="True" />
        <Button x:Name="btnEditQuery" Content="Edit" HorizontalAlignment="Right" Margin="0,16,10,0" VerticalAlignment="Top" Width="75" Click="btnEditQuery_Click"/>


    </Grid>
</UserControl>
