<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:avalonedit="http://icsharpcode.net/sharpdevelop/avalonedit" x:Class="QueryDesk.QueryParams"
        Title="QueryParams" Height="389" Width="616" WindowStartupLocation="CenterScreen">
    <Grid>
        <avalonedit:TextEditor x:Name="edQueryDescription" FontFamily="Consolas" FontSize="12" Text="[query description]" Margin="10,10,10,0" WordWrap="True" UseLayoutRounding="False" IsReadOnly="True" VerticalAlignment="Top" Height="100"/>
        <ScrollViewer x:Name="scrollParams" Margin="10,115,10,34">
            <Grid x:Name="gridParams" Margin="10,10,10,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="200" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
            </Grid>
        </ScrollViewer>
        <Button x:Name="btnOk" Content="Ok" HorizontalAlignment="Right" Margin="0,0,10,10" VerticalAlignment="Bottom" Width="75" Click="btnOk_Click" IsDefault="True"/>
        <Button x:Name="btnCancel" Content="Cancel" HorizontalAlignment="Right" Margin="0,0,90,10" VerticalAlignment="Bottom" Width="75" IsCancel="True" Click="btnCancel_Click"/>
    </Grid>
</Window>
